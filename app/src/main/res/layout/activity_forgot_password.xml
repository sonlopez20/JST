<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ForgotPassword">

    <include
        android:id="@+id/forgot_password_toolbar"
        layout="@layout/app_bar_layout"> </include>

    <ImageView
        android:id="@+id/forgot_password_logo"
        android:layout_width="260dp"
        android:layout_height="132dp"
        android:layout_below="@id/forgot_password_toolbar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="218dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/forgot_password_input"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/forgot_password_logo"
        android:layout_margin="20dp"
        android:background="@drawable/input"
        android:hint="Correo Electronico"
        android:padding="10dp"/>

    <Button
        android:id="@+id/forgot_password_button"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_password_input"
        android:layout_centerInParent="true"
        android:background="@drawable/buttons"
        android:text="Reiniciar ContraseÃ±a" />


</RelativeLayout>