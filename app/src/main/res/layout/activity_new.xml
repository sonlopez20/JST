<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".YearActivity">

    <include
        android:id="@+id/new_page_toolbar"
        layout="@layout/app_bar_layout" />

    <ImageView
        android:id="@+id/money"
        android:layout_marginTop="130dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/money"
        android:layout_centerInParent="true"
        android:layout_below="@+id/new_page_toolbar"/>
    <Button
        android:id="@+id/income"
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:layout_height="40dp"
        android:layout_below="@+id/money"
        android:background="@drawable/buttons"
        android:text="Crear Ingreso"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/card"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_payment_black_18dp"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/income"/>
    <Button
        android:id="@+id/payment"
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:layout_height="40dp"
        android:layout_below="@+id/card"
        android:background="@drawable/buttons"
        android:text="Crear Gasto"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/graph"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/report"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/payment"/>
    <Button
        android:id="@+id/report"
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:layout_height="40dp"
        android:layout_below="@+id/graph"
        android:background="@drawable/buttons"
        android:text="Ver Reporte"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="10dp"/>


</RelativeLayout>