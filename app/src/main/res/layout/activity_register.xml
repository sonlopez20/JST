<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_logo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">

    <include
        android:id="@+id/register_toolbar"
        layout="@layout/app_bar_layout">
    </include>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="280dp"
        android:layout_height="132dp"
        android:layout_below="@id/register_toolbar"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="85dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:background="@drawable/input"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_margin="10dp"
        android:hint="Correo Electronico"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <!--This is re-enter email box-->
    <EditText
        android:id="@+id/register_email2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_email"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/input"
        android:ems="10"
        android:hint="Re-ingresar Correo Electronico"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <!--This is password box-->
    <EditText
        android:id="@+id/register_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_email2"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/input"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="10dp" />

    <!--This is re-enter password box-->

    <EditText
        android:id="@+id/register_password2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/input"
        android:ems="10"
        android:hint="Re-ingresar Contraseña"
        android:inputType="textPassword"
        android:padding="10dp" />

    <!--This is create account button-->
    <Button
        android:id="@+id/register_create_account"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_password2"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/buttons"
        android:text="Crear cuenta" />



</RelativeLayout>