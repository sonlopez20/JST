<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/main_page_toolbar"
            layout="@layout/app_bar_layout">
        </include>

        <Button
            android:id="@+id/year20"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="2020"
            android:layout_margin="19dp"
            android:layout_below="@+id/year19"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/year19"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="2019"
            android:layout_margin="19dp"
            android:layout_below="@+id/year18"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/year18"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="2018"
            android:layout_margin="19dp"
            android:layout_below="@+id/year17"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/year17"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="2017"
            android:layout_margin="19dp"
            android:layout_below="@+id/year16"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/year16"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="2016"
            android:layout_margin="19dp"
            android:layout_below="@+id/main_page_toolbar"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="center"/>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginBottom="3dp"
        app:menu="@menu/navigation_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

